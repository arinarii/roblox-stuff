local function printRifts()
    local result = {}
    table.insert(result, "----==============")
    for _, rift in ipairs(riftsFolder:GetChildren()) do
        local display = waitForChildWithTimeout(rift, "Display", 1)
        if display then
            local surfaceGui = waitForChildWithTimeout(display, "SurfaceGui", 1)
            if surfaceGui then
                local icon = waitForChildWithTimeout(surfaceGui, "Icon", 1)
                if icon then
                    local luck = icon:FindFirstChild("Luck")
                    local luckText = luck and luck.Text or "N/A"
                    local riftInfo = rift.Name .. " - " .. luckText .. " - " .. (display.Position.Y + 9)

                    local timerText = ""
                    local timer = display.SurfaceGui:FindFirstChild("Timer")
                    if timer then
                        timerText = " - " .. timer.Text
                        riftInfo = riftInfo .. timerText
                    end

                    table.insert(result, riftInfo)

                    -- Play sound if rift meets criteria, only once per rift
                    if (luckText == "x25" or rift.Name == "aura-egg") and not soundPlayedFor[rift] then
                        bellSound:Play()
                        soundPlayedFor[rift] = true
                    end
                else
                    table.insert(result, rift.Name .. " - " .. (display.Position.Y + 9))
                end
            else
                table.insert(result, rift.Name .. " - " .. (display.Position.Y + 9))
            end
        else
            table.insert(result, rift.Name .. " - Display Missing")
        end
    end
    table.insert(result, "----==============")
    listFrame.Text = table.concat(result, "\n")
end
